  <a class="underline" href={go("/stores/")}>Stores</a>
  <a class="underline" href={go("/offers/")}>Offers</a>
  <a class="underline" href={go("/guides/")}>Guides</a>
  <a class="underline" href={go("/contact/")}>Contact</a>
</nav>
