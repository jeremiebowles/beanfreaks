---
const base = import.meta.env.BASE_URL;

const links = [
  { href: base, label: "Home" },
  { href: base + "roath/", label: "Roath" },
  { href: base + "canton/", label: "Canton" },
  { href: base + "royal/", label: "Royal Arcade" },
  { href: base + "contact/", label: "Contact" },
];
---

<header class="bf-header">
  <div class="bf-container flex items-center justify-between py-3">
    <a class="bf-logo" href={base} aria-label="Beanfreaks home">
      <span class="bf-logo__mark" aria-hidden="true"></span>
      <span class="bf-logo__text">Beanfreaks</span>
    </a>

    <nav class="hidden md:flex items-center gap-1" aria-label="Primary">
      {links.map((l) => (
        <a class="bf-navlink" href={l.href}>{l.label}</a>
      ))}
      <a class="bf-btn bf-btn-primary ml-2" href={base + "#stores"}>Find a store</a>
    </nav>

    <details class="md:hidden relative">
      <summary class="bf-btn bf-btn-ghost cursor-pointer select-none">Menu</summary>
      <div class="absolute right-0 mt-2 w-60 bf-popover">
        <div class="p-2 grid gap-1">
          {links.map((l) => (
            <a class="bf-navlink bf-navlink--mobile" href={l.href}>{l.label}</a>
          ))}
          <a class="bf-btn bf-btn-primary mt-2" href={base + "#stores"}>Find a store</a>
        </div>
      </div>
    </details>
  </div>
</header>
