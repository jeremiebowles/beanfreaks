---
import Badge from "./Badge.astro";

const { store } = Astro.props;
---
<a href={`/stores/${store.slug}/`} class="group block rounded-2xl border border-slate-200 p-5 shadow-sm transition hover:-translate-y-0.5 hover:shadow">
  <div class="flex items-start justify-between gap-3">
    <div>
      <h3 class="text-lg font-semibold tracking-tight">{store.data.name}</h3>
      <p class="mt-1 text-sm text-slate-600">{store.data.address}</p>
    </div>
    <span class="text-sm text-slate-700 group-hover:underline">Details â†’</span>
  </div>

  <div class="mt-4 flex flex-wrap gap-2">
    {store.data.highlights?.map((h) => <Badge>{h}</Badge>)}
  </div>

  <div class="mt-4 grid gap-1 text-sm text-slate-700">
    <p><span class="font-medium">Phone:</span> {store.data.phone}</p>
    <p><span class="font-medium">Hours:</span> {store.data.hours_summary}</p>
  </div>
</a>
