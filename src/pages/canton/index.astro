---
import Base from '../../layouts/base.astro';
const base = import.meta.env.BASE_URL;
const store = 'canton';
const titleMap = { roath: 'Roath', canton: 'Canton', royal: 'Royal Arcade' };
const imgMap = { roath: 'store-roath.jpg', canton: 'store-canton.jpg', royal: 'store-royal.jpg' };
const canonical = `https://www.beanfreaks.com/${store}/`;
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'HealthFoodStore',
  name: 'Beanfreaks Canton',
  url: canonical,
  telephone: '+44 2920 343226',
  address: {
    '@type': 'PostalAddress',
    streetAddress: '124 Cowbridge Road East',
    addressLocality: 'Canton',
    addressRegion: 'Cardiff',
    postalCode: 'CF11 9DX',
    addressCountry: 'GB'
  },
  openingHoursSpecification: [
    {
      '@type': 'OpeningHoursSpecification',
      dayOfWeek: [
        'Monday',
        'Tuesday',
        'Wednesday',
        'Thursday',
        'Friday',
        'Saturday'
      ],
      opens: '09:00',
      closes: '17:30'
    }
  ]
};
---
<head>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
</head>
<Base
  title={titleMap[store] + ' — Beanfreaks'}
  description="Beanfreaks Canton on Cowbridge Road East — health foods, supplements, and everyday essentials."
>
  <section class="bg-cream">
    <div class="container-bf py-12 sm:py-16">
      <div class="grid gap-8 lg:grid-cols-2 lg:items-center">
        <div>
          <p class="pill-bf bg-ink/5 text-ink">Store</p>
          <h1 class="mt-4 text-3xl font-extrabold tracking-tight sm:text-4xl">{titleMap[store]}</h1>
          <p class="mt-3 text-muted">We're located opposite Boots.</p>
          <div class="mt-6 grid gap-4 sm:grid-cols-2">
            <div class="card-bf p-5">
              <h2 class="text-lg font-extrabold">Visit</h2>
              <p class="mt-2 text-sm text-muted">
                Beanfreaks<br />
                124 Cowbridge Road East<br />
                Canton<br />
                Cardiff<br />
                CF11 9DX
              </p>
            </div>
            <div class="card-bf p-5">
              <h2 class="text-lg font-extrabold">Contact</h2>
              <p class="mt-2 text-sm text-muted">Phone: 02920 343226</p>
              <p class="mt-1 text-sm text-muted">We prioritise customers in store, so the phone can be busy.</p>
              <p class="mt-1 text-sm text-muted">
                Email: <a href="mailto:canton@beanfreaks.com">canton@beanfreaks.com</a>
              </p>
              <p class="mt-2 text-sm text-muted">Hours: 9am to 5.30pm Monday to Saturday</p>
            </div>
          </div>
          <div class="mt-6 flex gap-3">
            <a class="btn-primary" href={base + 'contact/'}>Ask about stock</a>
            <a class="btn-ghost" href={base}>Back home</a>
          </div>
        </div>
        <div class="card-bf overflow-hidden">
          <picture>
            <source srcset={base + 'img/store-canton.webp'} type="image/webp" />
            <img
              src={base + 'img/' + imgMap[store]}
              alt={titleMap[store] + ' shop'}
              class="h-[320px] w-full object-cover sm:h-[420px]"
              style="filter: brightness(1.03) contrast(1.08);"
              loading="lazy"
            />
          </picture>
        </div>
      </div>

      <div class="mt-10 grid gap-4 lg:grid-cols-3">
        <div class="card-bf p-5 lg:col-span-1">
          <h3 class="font-extrabold">Need help?</h3>
          <p class="mt-2 text-sm text-muted">If you haven’t found the answer to your question, please get in touch and we’ll be happy to help.</p>
        </div>
        <div class="card-bf overflow-hidden lg:col-span-2">
          <iframe
            title="Beanfreaks Canton map"
            src="https://www.google.com/maps?q=124+Cowbridge+Road+East,+Canton,+Cardiff,+CF11+9DX&output=embed"
            class="h-[320px] w-full border-0"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
          <div class="border-t border-ink/10 bg-paper px-4 py-3">
            <a
              class="btn-ghost"
              href="https://www.google.com/maps?q=124+Cowbridge+Road+East,+Canton,+Cardiff,+CF11+9DX"
              target="_blank"
              rel="noreferrer"
            >
              Open directions
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
