---
import Base from '../../layouts/base.astro';
import { getCollection } from 'astro:content';
const base = import.meta.env.BASE_URL;
const posts = (await getCollection('posts')).sort((a,b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---
<Base title="Posts â€” Beanfreaks">
  <section class="bg-paper">
    <div class="container-bf py-12 sm:py-16">
      <h1 class="text-3xl font-extrabold tracking-tight sm:text-4xl">Posts</h1>
      <p class="mt-3 max-w-2xl text-muted">Little guides, product notes, and the occasional gentle rant about ingredient lists.</p>

      <div class="mt-8 grid gap-4 sm:grid-cols-2">
        {posts.map((p) => (
          <article class="card-bf p-6">
            <p class="text-xs font-semibold text-ink/60">{p.data.pubDate.toISOString().slice(0,10)}</p>
            <h2 class="mt-2 text-lg font-extrabold">
              <a class="hover:underline" href={base + 'posts/' + p.slug + '/'}>{p.data.title}</a>
            </h2>
            {p.data.description && <p class="mt-2 text-sm text-muted">{p.data.description}</p>}
            <div class="mt-4 flex flex-wrap gap-2">
              {p.data.tags?.slice(0,3).map((t) => (
                <span class="pill-bf bg-ink/5 text-ink">{t}</span>
              ))}
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Base>
