---
import Base from "../../../layouts/base.astro";
const base = import.meta.env.BASE_URL;

export function getStaticPaths() {
  const posts = [
    { slug: "organic-september", title: "Organic September", date: "Sep 1, 2022" },
    { slug: "superfood-trail-mix", title: "Superfood Trail Mix", date: "Aug 26, 2022" },
    { slug: "organic-fruit-and-vegetables", title: "Organic Fruit & Vegetables", date: "Jul 1, 2022" },
    { slug: "national-peanut-butter-day", title: "National Peanut Butter Day", date: "Jun 22, 2022" },
  ];

  return posts.map((p) => ({
    params: { slug: p.slug },
    props: { title: p.title, date: p.date },
  }));
}

const { title, date } = Astro.props;
---

<Base title={`${title} — Beanfreaks`} description="Offer/event post placeholder page.">
  <section class="bf-section">
    <div class="bf-container space-y-6">
      <p class="bf-pill">{date}</p>
      <h1 class="bf-h1">{title}</h1>

      <div class="bf-card overflow-hidden">
        <img
          src={base + "img/hero.jpg"}
          alt="Placeholder post image"
          class="w-full h-72 object-cover"
          loading="lazy"
          decoding="async"
        />
      </div>

      <div class="bf-card p-6 space-y-3">
        <p class="bf-lede">
          This is a placeholder post so links don’t 404. Replace with real content whenever you’re ready.
        </p>
        <div class="flex flex-wrap gap-2 pt-2">
          <a class="bf-btn bf-btn-primary" href={base}>Back home</a>
          <a class="bf-btn bf-btn-ghost" href={base + "#deals"}>Back to deals</a>
        </div>
      </div>
    </div>
  </section>
</Base>
