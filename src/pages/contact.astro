---
import Base from "../layouts/base.astro";
---
<Base title="Contact — Beanfreaks">
  <div class="bf-kicker">We are here to help</div>
  <h1 class="bf-h1 mt-3">Contact</h1>

  <div class="mt-8 grid gap-6 md:grid-cols-3">
    <div class="bf-card bf-card-pad">
      <div class="text-lg font-semibold">General enquiries</div>
      <p class="mt-3 text-slate-700 text-sm">Email us and we’ll point you to the right store.</p>
      <p class="mt-4 font-semibold">kevin@beanfreaks.com</p>
    </div>

    <div class="bf-card bf-card-pad">
      <div class="text-lg font-semibold">Stores</div>
      <p class="mt-3 text-slate-700 text-sm">Details, opening hours and directions:</p>
      <ul class="mt-4 space-y-2 text-sm">
        <li><a href={import.meta.env.BASE_URL + "stores/"}>View all stores →</a></li>
      </ul>
    </div>

    <div class="bf-card bf-card-pad">
      <div class="text-lg font-semibold">Offers</div>
      <p class="mt-3 text-slate-700 text-sm">What’s on and what’s new in-store.</p>
      <p class="mt-4"><a href={import.meta.env.BASE_URL + "offers/"}>Browse offers →</a></p>
    </div>
  </div>
</Base>
