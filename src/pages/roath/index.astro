---
import Base from '../../layouts/base.astro';
---
<Base title="Roath | Beanfreaks" description="Beanfreaks Roath">
  <div class="grid gap-8 md:grid-cols-2 md:items-start">
    <div>
      <h1 class="text-3xl font-semibold tracking-tight">Roath</h1>
      <p class="mt-3 text-zinc-700">Find us on Albany Road.</p>
    </div>
    <img class="aspect-[4/3] w-full rounded-2xl object-cover" src={import.meta.env.BASE_URL + 'img/store-roath.jpg'} alt="Beanfreaks Roath" width="1200" height="900" loading="lazy" decoding="async" />
  </div>
</Base>
