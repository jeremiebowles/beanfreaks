---
import Base from "../../layouts/base.astro";
const base = import.meta.env.BASE_URL;

const maps = (q) =>
  `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(q)}`;
---

<Base title="Roath — Beanfreaks" description="Albany Road, Roath — opening hours, contact, directions.">
  <section class="bf-section">
    <div class="bf-container space-y-6">
      <p class="bf-pill">Store</p>
      <h1 class="bf-h1">Roath</h1>

      <div class="bf-card overflow-hidden">
        <img src={base + "img/store-roath.jpg"} alt="Roath store" class="w-full h-72 object-cover" loading="lazy" decoding="async" />
      </div>

      <div class="bf-card p-6 space-y-2">
        <p class="bf-cardtitle">Albany Road, Roath</p>
        <p class="text-sm text-bf-ink/80">95 Albany Road, Roath, Cardiff, CF24 3LP</p>
        <p class="text-sm"><span class="bf-badge">Mon–Sat: 9:00–17:30</span></p>

        <div class="pt-2 space-y-1 text-sm text-bf-ink/80">
          <p><span class="font-semibold">Phone:</span> 02920 494902</p>
          <p><span class="font-semibold">Email:</span> <a class="bf-link" href="mailto:roath@beanfreaks.com">roath@beanfreaks.com</a></p>
        </div>

        <div class="pt-4 flex flex-wrap gap-2">
          <a class="bf-btn bf-btn-primary" href={base + "#stores"}>Back to stores</a>
          <a class="bf-btn bf-btn-ghost" target="_blank" rel="noreferrer" href={maps("Beanfreaks 95 Albany Road Cardiff CF24 3LP")}>Directions</a>
        </div>
      </div>
    </div>
  </section>
</Base>
