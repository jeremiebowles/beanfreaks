---
import Base from '../../layouts/base.astro';
---
<Base title="Royal Arcade | Beanfreaks" description="Beanfreaks Royal Arcade">
  <div class="grid gap-8 md:grid-cols-2 md:items-start">
    <div>
      <h1 class="text-3xl font-semibold tracking-tight">Royal Arcade</h1>
      <p class="mt-3 text-zinc-700">City centre branch in the arcade.</p>
    </div>
    <img class="aspect-[4/3] w-full rounded-2xl object-cover" src={import.meta.env.BASE_URL + 'img/store-royal.jpg'} alt="Beanfreaks Royal Arcade" width="1200" height="900" loading="lazy" decoding="async" />
  </div>
</Base>
