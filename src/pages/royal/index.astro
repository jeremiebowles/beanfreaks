---
import Base from '../../layouts/base.astro';
const base = import.meta.env.BASE_URL;
const store = 'royal';
const titleMap = { roath: 'Roath', canton: 'Canton', royal: 'Royal Arcade' };
const imgMap = { roath: 'store-roath.jpg', canton: 'store-canton.jpg', royal: 'store-royal.jpg' };
---
<Base title={titleMap[store] + ' — Beanfreaks'}>
  <section class="bg-cream">
    <div class="container-bf py-12 sm:py-16">
      <div class="grid gap-8 lg:grid-cols-2 lg:items-center">
        <div>
          <p class="pill-bf bg-ink/5 text-ink">Store</p>
          <h1 class="mt-4 text-3xl font-extrabold tracking-tight sm:text-4xl">{titleMap[store]}</h1>
          <p class="mt-3 text-muted">Address and details go here. Keep it simple and useful.</p>
          <div class="mt-6 flex gap-3">
            <a class="btn-primary" href={base + 'contact/'}>Ask about stock</a>
            <a class="btn-ghost" href={base}>Back home</a>
          </div>
        </div>
        <div class="card-bf overflow-hidden">
          <img src={base + 'img/' + imgMap[store]} alt={titleMap[store] + ' shop'} class="h-[320px] w-full object-cover sm:h-[420px]" />
        </div>
      </div>

      <div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
        <div class="card-bf p-5">
          <h3 class="font-extrabold">Top picks</h3>
          <p class="mt-2 text-sm text-muted">Featured products / offers.</p>
        </div>
        <div class="card-bf p-5">
          <h3 class="font-extrabold">Vegan</h3>
          <p class="mt-2 text-sm text-muted">Good range, not just tofu.</p>
        </div>
        <div class="card-bf p-5">
          <h3 class="font-extrabold">Gluten-free</h3>
          <p class="mt-2 text-sm text-muted">Bread, pasta, snacks.</p>
        </div>
        <div class="card-bf p-5">
          <h3 class="font-extrabold">Supplements</h3>
          <p class="mt-2 text-sm text-muted">We’ll help you pick the sensible ones.</p>
        </div>
      </div>
    </div>
  </section>
</Base>
