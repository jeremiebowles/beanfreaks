---
import Base from '../layouts/base.astro';
import SectionHeader from '../components/SectionHeader.astro';
import FeatureCard from '../components/FeatureCard.astro';
const base = import.meta.env.BASE_URL;
---
<Base title="Beanfreaks" description="Organic groceries, supplements, vegan and gluten-free essentials.">
  <section class="bg-cream">
    <div class="container-bf py-14 sm:py-18">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
        <div>
          <p class="pill-bf bg-ink/5 text-ink">Local • Organic • Properly useful</p>
          <h1 class="mt-4 text-4xl font-extrabold tracking-tight sm:text-5xl">
            Good food, clean supplements, and genuinely helpful advice.
          </h1>
          <p class="mt-4 text-lg text-muted">
            Organic groceries, vegan and gluten-free essentials, and a supplements shelf that isn’t a circus.
          </p>
          <div class="mt-6 flex flex-wrap gap-3">
            <a class="btn-primary" href={base + 'roath/'}>Find your nearest shop</a>
            <a class="btn-ghost" href={base + 'posts/'}>This week’s picks</a>
          </div>
          <div class="mt-6 flex flex-wrap gap-2">
            <span class="pill-organic">Organic</span>
            <span class="pill-vegan">Vegan</span>
            <span class="pill-gf">Gluten-free</span>
          </div>
        </div>

        <div class="card-bf overflow-hidden">
          <img src={base + 'img/hero.jpg'} alt="Fresh produce and pantry staples" class="h-[320px] w-full object-cover sm:h-[420px]" />
        </div>
      </div>
    </div>
  </section>

  <section class="bg-paper">
    <div class="container-bf py-12 sm:py-16">
      <SectionHeader
        kicker="What we’re good at"
        title="A shop that makes healthy feel easy"
        lead="Curated shelves, clear labels, and staff who can translate supplement-speak into English."
      />

      <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
        <FeatureCard
  title="Organic groceries"
  desc="Everyday staples, properly sourced."
  pill={{ label: 'Organic', class: 'pill-organic' }}
  img={{ src: base + 'img/feature-produce.jpg', alt: 'Fresh produce' }}
/>

<FeatureCard
  title="Supplements"
  desc="The useful stuff, not the hype."
  pill={{ label: 'Trusted', class: 'pill-bf bg-ink/5 text-ink' }}
  img={{ src: base + 'img/feature-supplements.jpg', alt: 'Supplement bottle' }}
/>

<FeatureCard
  title="Vegan & veggie"
  desc="Great options that aren’t just ‘salad’."
  pill={{ label: 'Vegan', class: 'pill-vegan' }}
  img={{ src: base + 'img/feature-bulk.jpg', alt: 'Pantry jars' }}
/>

<FeatureCard
  title="Gluten-free"
  desc="Bread, pasta, snacks — without compromise."
  pill={{ label: 'GF', class: 'pill-gf' }}
  img={{ src: base + 'img/feature-glutenfree.jpg', alt: 'Sliced loaf of bread' }}
/>

      </div>
    </div>
  </section>

  <section class="bg-cream">
    <div class="container-bf py-12 sm:py-16">
      <div class="grid gap-8 lg:grid-cols-3">
        <div class="card-bf overflow-hidden">
          <img src={base + 'img/store-roath.jpg'} alt="Roath store" class="h-52 w-full object-cover" />
          <div class="p-6">
            <h3 class="text-lg font-extrabold">Roath</h3>
            <p class="mt-2 text-sm text-muted">Your neighbourhood essentials, plus special-order supplements.</p>
            <a class="mt-4 inline-flex text-sm font-semibold" href={base + 'roath/'}>View store →</a>
          </div>
        </div>
        <div class="card-bf overflow-hidden">
          <img src={base + 'img/store-canton.jpg'} alt="Canton store" class="h-52 w-full object-cover" />
          <div class="p-6">
            <h3 class="text-lg font-extrabold">Canton</h3>
            <p class="mt-2 text-sm text-muted">Big pantry energy. Great vegan range.</p>
            <a class="mt-4 inline-flex text-sm font-semibold" href={base + 'canton/'}>View store →</a>
          </div>
        </div>
        <div class="card-bf overflow-hidden">
          <img src={base + 'img/store-royal.jpg'} alt="Royal store" class="h-52 w-full object-cover" />
          <div class="p-6">
            <h3 class="text-lg font-extrabold">Royal</h3>
            <p class="mt-2 text-sm text-muted">Supplements and gluten-free favourites.</p>
            <a class="mt-4 inline-flex text-sm font-semibold" href={base + 'royal/'}>View store →</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
