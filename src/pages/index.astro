---
import Base from '../layouts/base.astro';
import SectionHeader from '../components/SectionHeader.astro';
import FeatureCard from '../components/FeatureCard.astro';
const base = import.meta.env.BASE_URL;
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'HealthFoodStore',
  name: 'Beanfreaks',
  url: 'https://www.beanfreaks.com/',
  department: [
    {
      '@type': 'HealthFoodStore',
      name: 'Beanfreaks Roath',
      url: 'https://www.beanfreaks.com/roath/',
      telephone: '+44 2920 494902',
      address: {
        '@type': 'PostalAddress',
        streetAddress: '95 Albany Road',
        addressLocality: 'Roath',
        addressRegion: 'Cardiff',
        postalCode: 'CF24 3LP',
        addressCountry: 'GB'
      }
    },
    {
      '@type': 'HealthFoodStore',
      name: 'Beanfreaks Canton',
      url: 'https://www.beanfreaks.com/canton/',
      telephone: '+44 2920 343226',
      address: {
        '@type': 'PostalAddress',
        streetAddress: '124 Cowbridge Road East',
        addressLocality: 'Canton',
        addressRegion: 'Cardiff',
        postalCode: 'CF11 9DX',
        addressCountry: 'GB'
      }
    },
    {
      '@type': 'HealthFoodStore',
      name: 'Beanfreaks Royal Arcade',
      url: 'https://www.beanfreaks.com/royal/',
      telephone: '+44 2920 251671',
      address: {
        '@type': 'PostalAddress',
        streetAddress: '8 Royal Arcade',
        addressLocality: 'Morgan Quarter',
        addressRegion: 'Cardiff',
        postalCode: 'CF10 1AE',
        addressCountry: 'GB'
      }
    }
  ]
};
---
<Base title="Beanfreaks" description="Organic groceries, supplements, vegan and gluten-free essentials.">
  <head>
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </head>
  <section class="bg-cream">
    <div class="container-bf py-14 sm:py-18">
      <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
        <div>
          <p class="pill-bf bg-ink/5 text-ink">Local • Organic • Properly useful</p>
          <h1 class="mt-4 text-4xl font-extrabold tracking-tight sm:text-5xl">
            Good food, clean supplements, and genuinely helpful advice.
          </h1>
          <p class="mt-4 text-lg text-muted">
            Organic groceries, vegan and gluten-free essentials, and a supplements shelf that isn’t a circus.
          </p>
          <div class="mt-6 flex flex-wrap gap-3">
            <a class="btn-primary" href="#stores">Find your nearest shop</a>
            <a class="btn-ghost" href="#picks">This week’s picks</a>
          </div>
          <div class="mt-6 flex flex-wrap gap-2">
            <span class="pill-organic">Organic</span>
            <span class="pill-vegan">Vegan</span>
            <span class="pill-gf">Gluten-free</span>
          </div>
        </div>

        <div class="card-bf overflow-hidden">
          <picture>
            <source srcset={base + 'img/hero.webp'} type="image/webp" />
            <img src={base + 'img/hero.jpg'} alt="Fresh produce and pantry staples" class="h-[320px] w-full object-cover sm:h-[420px]" />
          </picture>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-paper">
    <div class="container-bf py-12 sm:py-16">
      <SectionHeader
        kicker="What we’re good at"
        title="A shop that makes healthy feel easy"
        lead="Curated shelves, clear labels, and staff who can translate supplement-speak into English."
      />

      <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
        <FeatureCard
  title="Organic groceries"
  desc="Everyday staples, properly sourced."
  pill={{ label: 'Organic', class: 'pill-organic' }}
  img={{ src: base + 'img/feature-produce.jpg', webp: base + 'img/feature-produce.webp', alt: 'Fresh produce' }}
/>

<FeatureCard
  title="Supplements"
  desc="The useful stuff, not the hype."
  pill={{ label: 'Trusted', class: 'pill-bf bg-ink/5 text-ink' }}
  img={{ src: base + 'img/feature-supplements.jpg', webp: base + 'img/feature-supplements.webp', alt: 'Supplement bottle' }}
/>

<FeatureCard
  title="Vegan & veggie"
  desc="Great options that aren’t just ‘salad’."
  pill={{ label: 'Vegan', class: 'pill-vegan' }}
  img={{ src: base + 'img/feature-bulk.jpg', webp: base + 'img/feature-bulk.webp', alt: 'Pantry jars' }}
/>

<FeatureCard
  title="Gluten-free"
  desc="Bread, pasta, snacks — without compromise."
  pill={{ label: 'GF', class: 'pill-gf' }}
  img={{ src: base + 'img/feature-glutenfree.jpg', webp: base + 'img/feature-glutenfree.webp', alt: 'Sliced loaf of bread' }}
/>

      </div>
    </div>
  </section>

  <section id="picks" class="bg-cream">
    <div class="container-bf py-12 sm:py-16">
      <SectionHeader
        kicker="In-store picks"
        title="Product showcase"
        lead="A small sample of what’s on the shelves right now."
      />

      <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <div class="card-bf overflow-hidden">
          <picture>
            <source srcset={base + 'img/product-aloe.webp'} type="image/webp" />
            <img
              src={base + 'img/product-aloe.jpg'}
              alt="Aloe Vera Juice"
              class="h-56 w-full object-cover"
              loading="lazy"
            />
          </picture>
          <div class="p-6">
            <h3 class="text-lg font-extrabold">Aloe Vera Juice</h3>
            <p class="mt-2 text-sm text-muted">Regular Price: £5.99</p>
            <p class="text-sm text-muted">Sale Price: £4.49</p>
          </div>
        </div>

        <div class="card-bf overflow-hidden">
          <picture>
            <source srcset={base + 'img/product-chickpeas.webp'} type="image/webp" />
            <img
              src={base + 'img/product-chickpeas.jpg'}
              alt="Chick Peas"
              class="h-56 w-full object-cover"
              loading="lazy"
            />
          </picture>
          <div class="p-6">
            <h3 class="text-lg font-extrabold">Chick Peas</h3>
            <p class="mt-2 text-sm text-muted">Regular Price: £3.25</p>
            <p class="text-sm text-muted">Sale Price: £1.75</p>
          </div>
        </div>

        <div class="card-bf overflow-hidden">
          <picture>
            <source srcset={base + 'img/product-cherry-night.webp'} type="image/webp" />
            <img
              src={base + 'img/product-cherry-night.jpg'}
              alt="Cherry Night"
              class="h-56 w-full object-cover"
              loading="lazy"
            />
          </picture>
          <div class="p-6">
            <h3 class="text-lg font-extrabold">Cherry Night</h3>
            <p class="mt-2 text-sm text-muted">Regular Price: £8.45</p>
            <p class="text-sm text-muted">Sale Price: £6.95</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="stores" class="bg-paper">
    <div class="container-bf py-12 sm:py-16">
      <SectionHeader
        kicker="Your local"
        title="Cardiff Health Food Shops"
        lead="Three neighbourhood stores, each with its own feel."
      />

      <div class="mt-6 grid gap-8 lg:grid-cols-3">
        <div class="card-bf overflow-hidden">
          <iframe
            title="Roath Street View"
            src="https://www.google.com/maps?q=51.494004,-3.167075&layer=c&output=embed"
            class="h-52 w-full border-0"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
          <div class="p-6">
            <h3 class="text-lg font-extrabold">Roath</h3>
            <p class="mt-2 text-sm text-muted">Your neighbourhood essentials, plus special-order supplements.</p>
            <a class="mt-4 inline-flex text-sm font-semibold" href={base + 'roath/'}>View store →</a>
          </div>
        </div>
        <div class="card-bf overflow-hidden">
          <iframe
            title="Canton Street View"
            src="https://www.google.com/maps?q=51.481668,-3.196507&layer=c&output=embed"
            class="h-52 w-full border-0"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
          <div class="p-6">
            <h3 class="text-lg font-extrabold">Canton</h3>
            <p class="mt-2 text-sm text-muted">Big pantry energy. Great vegan range.</p>
            <a class="mt-4 inline-flex text-sm font-semibold" href={base + 'canton/'}>View store →</a>
          </div>
        </div>
        <div class="card-bf overflow-hidden">
          <iframe
            title="Royal Arcade Street View"
            src="https://www.google.com/maps?q=51.47817,-3.17767&layer=c&output=embed"
            class="h-52 w-full border-0"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
          <div class="p-6">
            <h3 class="text-lg font-extrabold">Royal Arcade</h3>
            <p class="mt-2 text-sm text-muted">Supplements and gluten-free favourites.</p>
            <a class="mt-4 inline-flex text-sm font-semibold" href={base + 'royal/'}>View store →</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
