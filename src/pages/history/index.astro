---
import Base from '../../layouts/base.astro';
import SectionHeader from '../../components/SectionHeader.astro';
const base = import.meta.env.BASE_URL;
const images = [
  { src: base + 'img/history/beanfreaks-penarth.png', webp: base + 'img/history/beanfreaks-penarth.webp' },
  { src: base + 'img/history/beanfreaks-penarth-2.png', webp: base + 'img/history/beanfreaks-penarth-2.webp' },
  { src: base + 'img/history/1000002663.jpg', webp: base + 'img/history/1000002663.webp' },
  { src: base + 'img/history/1000002672.jpg', webp: base + 'img/history/1000002672.webp' },
  { src: base + 'img/history/1000002647.jpg', webp: base + 'img/history/1000002647.webp' },
  { src: base + 'img/history/1000002649.jpg', webp: base + 'img/history/1000002649.webp' },
  { src: base + 'img/history/1000002650.jpg', webp: base + 'img/history/1000002650.webp' },
  { src: base + 'img/history/1000002651.jpg', webp: base + 'img/history/1000002651.webp' },
  { src: base + 'img/history/1000002652.jpg', webp: base + 'img/history/1000002652.webp' },
  { src: base + 'img/history/1000002655.jpg', webp: base + 'img/history/1000002655.webp' },
  { src: base + 'img/history/1000002657.jpg', webp: base + 'img/history/1000002657.webp' }
];
const captions = [
  { year: '1978', caption: 'The first shop, which Kevin lived above, opened in 1978 on Victoria Bridge in Penarth.' },
  { year: '1982', caption: 'Growing local supply lines and more pantry basics. Ask your parents if they remember when the world went from black and white to colour.' },
  { year: '1987', caption: 'Grand opening of the St Mary Street store launched by celebrity Bernie Winters.' },
  { year: '1993', caption: '..and long before Beethoven there was Schnorbitz, or in this case, Schorbitz Jr.' },
  { year: '1999', caption: 'Community events and specialist organic ranges.' },
  { year: '2005', caption: 'More staff, more knowledge, and a wider vegan range.' },
  { year: '2010', caption: 'A fresh look and a bigger focus on local makers.' },
  { year: '2014', caption: 'Seasonal displays and a deeper supplements shelf.' },
  { year: '2018', caption: 'Celebrating 40 years with our community.' },
  { year: '2020', caption: 'Staying open for the essentials.' },
  { year: 'Today', caption: 'Still local, still helpful, still Beanfreaks.' }
];
---
<Base title="History — Beanfreaks" description="A short visual history of Beanfreaks in Cardiff.">
  <section class="bg-cream">
    <div class="container-bf py-12 sm:py-16">
      <SectionHeader
        kicker="Since 1978"
        title="A Short History"
        lead="A visual timeline of Beanfreaks — from the early shelves to today."
      />

      <div class="mt-10 grid gap-6 lg:grid-cols-12">
        <div class="lg:col-span-4">
          <div class="card-bf p-6 sticky top-24">
            <h2 class="text-xl font-extrabold">Our story in snapshots</h2>
            <p class="mt-3 text-sm text-muted">
              A dozen moments that show how the shop has grown with Cardiff — always focused on helpful advice,
              honest ingredients, and local relationships.
            </p>
            <div class="mt-6 space-y-2 text-sm text-muted">
              <p>• Independent since day one</p>
              <p>• Local suppliers and seasonal focus</p>
              <p>• Friendly advice, no hype</p>
            </div>
          </div>
        </div>

        <div class="lg:col-span-8">
          <div class="grid gap-6 sm:grid-cols-2">
            {images.map((img, idx) => (
              <figure class="card-bf overflow-hidden">
                {img.webp ? (
                  <picture>
                    <source srcset={img.webp} type="image/webp" />
                    <img src={img.src} alt={captions[idx].caption} class="h-56 w-full object-cover" loading="lazy" />
                  </picture>
                ) : (
                  <img src={img.src} alt={captions[idx].caption} class="h-56 w-full object-cover" loading="lazy" />
                )}
                <figcaption class="p-5">
                  <p class="text-xs font-semibold text-ink/60">{captions[idx].year}</p>
                  <p class="mt-2 text-sm text-muted">{captions[idx].caption}</p>
                </figcaption>
              </figure>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
