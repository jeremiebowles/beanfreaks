---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
const { title = 'Beanfreaks', description = 'Organic groceries, supplements, vegan and gluten-free essentials.' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="color-scheme" content="light" />

    <base href={import.meta.env.BASE_URL} />
    <link rel="icon" href={import.meta.env.BASE_URL + "favicon.svg"} type="image/svg+xml" />
    <link rel="stylesheet" href={import.meta.env.BASE_URL + "tw.css"} />

    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <Nav />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
