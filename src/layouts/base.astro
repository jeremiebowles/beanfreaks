---
import Nav from "../components/Nav.astro";
import Logo from "../components/Logo.astro";

const { title = "Beanfreaks" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,500,600&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Tailwind output (your build generates dist/tw.css) -->
    <link rel="stylesheet" href={import.meta.env.BASE_URL + "tw.css"} />
    <base href={import.meta.env.BASE_URL} />
  </head>

  <body>
    <header class="sticky top-0 z-20 border-b border-slate-200 bg-cream/85 backdrop-blur">
      <div class="bf-container py-4 flex items-center justify-between gap-6">
        <a href={import.meta.env.BASE_URL} class="no-underline">
          <Logo />
        </a>
        <Nav />
      </div>
    </header>

    <main class="bf-container py-10">
      <slot />
    </main>

    <footer class="border-t border-slate-200 bg-white">
      <div class="bf-container py-10 text-sm text-slate-600">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
          <span>Â© {new Date().getFullYear()} Beanfreaks</span>
          <span class="text-slate-500">Health. Wellness. Organic.</span>
        </div>
      </div>
    </footer>
  </body>
</html>
