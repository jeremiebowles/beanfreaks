---
import Nav from "../components/Nav.astro";

type Props = {
  title?: string;
  description?: string;
};

const {
  title = "Beanfreaks",
  description = "Health. Wellness. Organic. Your local Cardiff health food store.",
} = Astro.props;

const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <base href={base} />
    <link rel="stylesheet" href={base + "tw.css"} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,400;9..144,600;9..144,700&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <a class="bf-skip" href="#main">Skip to content</a>

    <div class="bf-shell">
      <Nav />

      <main id="main" class="bf-main">
        <slot />
      </main>

      <footer class="bf-footer">
        <div class="bf-container grid gap-8 md:grid-cols-3 py-10">
          <div class="space-y-2">
            <p class="bf-foot-title">Beanfreaks</p>
            <p class="text-sm text-bf-ink/80">
              Health. Wellness. Organic. A family-run Cardiff health food store since 1978.
            </p>
          </div>

          <div class="space-y-2">
            <p class="bf-foot-title">Stores</p>
            <ul class="text-sm text-bf-ink/80 space-y-1">
              <li><a class="bf-link" href={base + "roath/"}>Roath</a></li>
              <li><a class="bf-link" href={base + "canton/"}>Canton</a></li>
              <li><a class="bf-link" href={base + "royal/"}>Royal Arcade</a></li>
            </ul>
          </div>

          <div class="space-y-2">
            <p class="bf-foot-title">Contact</p>
            <p class="text-sm text-bf-ink/80">
              For general enquiries:
              <a class="bf-link" href={"mailto:kevin@beanfreaks.com"}>kevin@beanfreaks.com</a>
            </p>
            <a class="bf-btn bf-btn-ghost" href={base + "contact/"}>Contact details</a>
          </div>
        </div>

        <div class="bf-container border-t border-bf-ink/10 pt-6 pb-8 text-xs text-bf-ink/60 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
          <p>Â© {new Date().getFullYear()} Beanfreaks Ltd. All rights reserved.</p>
          <p class="opacity-80">Built static. Behaves. Rare these days.</p>
        </div>
      </footer>
    </div>
  </body>
</html>
