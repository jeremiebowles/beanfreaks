---
import "../styles/global.css";
import { withBase } from "../lib/withBase";

const { title, description, canonical, noindex } = Astro.props;
const url = canonical ?? Astro.url;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={url.toString()} />
    {noindex ? <meta name="robots" content="noindex,nofollow" /> : null}
    <!-- Tailwind CSS built during GitHub Actions deploy -->
    <link rel="stylesheet" href={withBase("assets/tw.css")} />
  </head>
  <body class="min-h-dvh bg-white text-slate-900">
    <a class="sr-only focus:not-sr-only focus:fixed focus:top-3 focus:left-3 focus:z-50 focus:rounded-lg focus:bg-white focus:px-3 focus:py-2 focus:shadow" href="#content">
      Skip to content
    </a>

    <header class="border-b border-slate-200">
      <div class="mx-auto flex max-w-6xl items-center justify-between gap-4 px-4 py-4">
        <a href={withBase("")} class="flex items-center gap-3 font-semibold tracking-tight">
          <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl bg-slate-900 text-white">BF</span>
          <span>Beanfreaks</span>
        </a>
        <nav class="flex flex-wrap items-center gap-x-5 gap-y-2 text-sm">
          <a class="hover:underline" href={withBase("stores/")}>Stores</a>
          <a class="hover:underline" href={withBase("offers/")}>Offers</a>
          <a class="hover:underline" href={withBase("guides/")}>Guides</a>
          <a class="hover:underline" href={withBase("contact/")}>Contact</a>
        </nav>
      </div>
    </header>

    <main id="content" class="mx-auto max-w-6xl px-4 py-10">
      <slot />
    </main>

    <footer class="border-t border-slate-200">
      <div class="mx-auto max-w-6xl px-4 py-10 text-sm text-slate-600">
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
          <p>© {new Date().getFullYear()} Beanfreaks</p>
          <p>
            <a class="hover:underline" href={withBase("contact/")}>Get in touch</a>
            <span class="mx-2">·</span>
            <a class="hover:underline" href={withBase("guides/")}>Read the guides</a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
